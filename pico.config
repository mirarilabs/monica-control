# Pico Upload Configuration
# This file defines what should be uploaded to the Pico

[upload]
include = [
    "main.py",
    "config.py", 
    "device.py",
    "network_credentials.py",
    "network_init.py",
    "pico_command_server.py",
    "monica/",
    "peripherals/",
    "utils/"
]

exclude = [
    "local_webserver/",
    "README*.md",
    "PROJECT_STRUCTURE.md", 
    "TODO",
    ".git/",
    ".vscode/",
    "__pycache__/",
    "*.pyc",
    ".picoignore",
    ".gitignore",
    "pico.config"
]

